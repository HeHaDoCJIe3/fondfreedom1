    <script>
        // Плавная прокрутка
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({ behavior: 'smooth' });
                }
            });
        });

        // Изменение шапки при прокрутке
        window.addEventListener('scroll', function() {
            const header = document.querySelector('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Мобильное меню
        const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
        const nav = document.querySelector('nav ul');
        
        mobileMenuBtn.addEventListener('click', function() {
            nav.style.display = nav.style.display === 'flex' ? 'none' : 'flex';
        });

        // Анимация при прокрутке
        const animateOnScroll = () => {
            const elements = document.querySelectorAll('.service-card, .portfolio-item, .benefit-card, .testimonial-card');
            
            elements.forEach(el => {
                const position = el.getBoundingClientRect();
                
                // Если элемент виден на экране
                if(position.top < window.innerHeight - 100) {
                    el.style.opacity = 1;
                    el.style.transform = 'translateY(0)';
                }
            });
        };

        // Инициализация анимации
        window.addEventListener('scroll', animateOnScroll);
        window.addEventListener('load', animateOnScroll);
        
        // Изначально скрываем элементы
        document.querySelectorAll('.service-card, .portfolio-item, .benefit-card, .testimonial-card').forEach(el => {
            el.style.opacity = 0;
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
        });
        
        /*
            ДЛЯ ДОБАВЛЕНИЯ ВАШЕЙ АНИМАЦИИ НА ФОН:
            1. Замените содержимое #animationContainer на код вашей анимации
            2. Или используйте этот пример для Lottie:
        
            // Подключение Lottie player (раскомментируйте, если нужно)
            // <script src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
            
            // Затем создайте Lottie player:
            const animationContainer = document.getElementById('animationContainer');
            animationContainer.innerHTML = `
                <lottie-player 
                    src="ВАША_ССЫЛКА_НА_JSON_ФАЙЛ_С_АНИМАЦИЕЙ" 
                    background="transparent" 
                    speed="1"
                    style="width: 100%; height: 100%;"
                    loop
                    autoplay>
                </lottie-player>
            `;
            
            3. Для других форматов анимации (GIF, видео, CSS) вставьте соответствующий код
        */
    </script>
</body>
</html>
